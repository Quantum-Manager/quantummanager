    <version>3.2.0</version>
    <description>COM_QUANTUMMANAGER_XML_DESCRIPTION</description>
    <namespace path="src">Joomla\Component\QuantumManager</namespace>

    <scriptfile>script.php</scriptfile>

    <media folder="media/com_quantummanager" destination="com_quantummanager">
        <folder>css</folder>
        <folder>images</folder>
        <folder>js</folder>
    </media>

    <files folder="components/com_quantummanager">
        <folder>language</folder>
        <folder>src</folder>
        <folder>tmpl</folder>
    </files>

    <administration>
        <menu view="quantummanager">COM_QUANTUMMANAGER</menu>

        <files folder="administrator/components/com_quantummanager">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>mimetype.txt</filename>
            <folder>src</folder>
            <folder>services</folder>
            <folder>layouts</folder>
            <folder>tmpl</folder>
            <folder>language</folder>
        </files>

        <languages folder="administrator/components/com_quantummanager/language">
            <language tag="en-GB">en-GB/en-GB.com_quantummanager.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_quantummanager.sys.ini</language>
            <language tag="ru-RU">ru-RU/ru-RU.com_quantummanager.ini</language>
            <language tag="ru-RU">ru-RU/ru-RU.com_quantummanager.sys.ini</language>
        </languages>

    </administration>

</extension>
